# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{py,java,r,R}]
indent_style = space
indent_size = 4

[*.{md,Rmd,rst}]
trim_trailing_whitespace = false
indent_size = 2

[*.{js,json,y{a,}ml,html,cwl,vue}]
indent_style = space
indent_size = 2
